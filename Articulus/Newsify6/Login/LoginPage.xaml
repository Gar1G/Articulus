                                                    <SolidColorBrush Color="Gray"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Target="ellipse.(Shape.Stroke)">
                                                <Setter.Value>
                                                    <SolidColorBrush Color="Gray"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Target="ContentPresenter.(ContentPresenter.Background)" Value="{x:Null}"/>
                                        </VisualState.Setters>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <SolidColorBrush Color="#FFF7F7F7"/>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <PointerDownThemeAnimation Storyboard.TargetName="RootGrid"/>
                                            <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ellipse" d:IsOptimized="True"/>
                                            <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ContentPresenter" d:IsOptimized="True"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlDisabledBaseMediumLowBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Ellipse x:Name="ellipse" Margin="-10" Stroke="#FF2C2C2C" Opacity="0"/>
                            <ContentPresenter x:Name="ContentPresenter" AutomationProperties.AccessibilityView="Raw" BorderThickness="0" ContentTemplate="{TemplateBinding ContentTemplate}" ContentTransitions="{TemplateBinding ContentTransitions}" Content="{TemplateBinding Content}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" Padding="0" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" Foreground="#FF2C2C2C" Background="#FFF7F7F7" Opacity="0"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ButtonStyle2" TargetType="Button">
            <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
            <Setter Property="Foreground" Value="{ThemeResource SystemControlForegroundBaseHighBrush}"/>
            <Setter Property="BorderBrush" Value="{ThemeResource SystemControlForegroundTransparentBrush}"/>
            <Setter Property="BorderThickness" Value="{ThemeResource ButtonBorderThemeThickness}"/>
            <Setter Property="Padding" Value="8,4,8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}"/>
            <Setter Property="UseSystemFocusVisuals" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="RootGrid" Background="{TemplateBinding Background}">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <PointerUpThemeAnimation Storyboard.TargetName="RootGrid"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="ContentPresenter.(ContentPresenter.Background)">
                                                <Setter.Value>
                                                    <SolidColorBrush Color="#FF34495E"/>
                                                </Setter.Value>
                                            </Setter>
                                        </VisualState.Setters>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlHighlightBaseMediumLowBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <SolidColorBrush Color="White"/>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <PointerUpThemeAnimation Storyboard.TargetName="RootGrid"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="ContentPresenter.(ContentPresenter.Background)">
                                                <Setter.Value>
                                                    <SolidColorBrush Color="#FF2C3E50"/>
                                                </Setter.Value>
                                            </Setter>
                                        </VisualState.Setters>
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundBaseMediumLowBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlHighlightTransparentBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <SolidColorBrush Color="White"/>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                            <PointerDownThemeAnimation Storyboard.TargetName="RootGrid"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="RootGrid">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlBackgroundBaseLowBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlDisabledBaseMediumLowBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource SystemControlDisabledTransparentBrush}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <ContentPresenter x:Name="ContentPresenter" AutomationProperties.AccessibilityView="Raw" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" ContentTemplate="{TemplateBinding ContentTemplate}" ContentTransitions="{TemplateBinding ContentTransitions}" Content="{TemplateBinding Content}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" Padding="{TemplateBinding Padding}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#f7f7f7" x:Name="Main">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinHeight="500" >

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 30" >
                    <Button x:Name="Login" HorizontalAlignment="Left" FontSize="12" VerticalAlignment="Top" Foreground="White" Background="#2c3e50" Width="150" Height="60" Margin="0 0 0 0" Style="{StaticResource ButtonStyle2}" BorderThickness="0" />
                    <Button x:Name="Register" HorizontalAlignment="Right" Width="150" FontSize="12" Height="60" Margin="0 0 0 0" Style="{StaticResource ButtonStyle2}" BorderThickness="0"/>
                </StackPanel>
                <TextBlock x:Name="FormValidation" FontSize="10" Margin="0 0 0 20" HorizontalAlignment="Center" />
                <TextBlock x:Name="FormValidationLogin" Margin="0 0 0 20"  FontSize="10" HorizontalAlignment="Center" />

                <StackPanel  x:Name= "RegisterForm" VerticalAlignment="Top" >
                    <TextBox x:Name="FirstName" IsSpellCheckEnabled="False" Margin="0 0 0 0" Style="{StaticResource TextBoxStyle1}" />
                    <TextBlock x:Name="FirstNameValidation" FontSize="10" Margin="0 5 0 10" HorizontalAlignment="Right" />
                    <TextBox x:Name="SecondName" IsSpellCheckEnabled="False" Margin="0 0 0 0" Style="{StaticResource TextBoxStyle1}" />
                    <TextBlock x:Name="SecondNameValidation" FontSize="10" Margin="0 5 0 10" HorizontalAlignment="Right" />
                    <TextBox x:Name="Email" Margin="0 0 0 0" IsSpellCheckEnabled="False" Style="{StaticResource TextBoxStyle1}" HorizontalAlignment="Stretch"  InputScope="EmailNameOrAddress"  />
                    <TextBlock x:Name="EmailValidation" FontSize="10" Margin="0 5 0 10" HorizontalAlignment="Right" />
                    <PasswordBox x:Name="Password" Margin="0 0 0 20" Style="{StaticResource PasswordBoxStyle1}"   PasswordRevealMode="Hidden" />
                    <PasswordBox x:Name="PasswordRepeat" Margin="0 10 0 0" Style="{StaticResource PasswordBoxStyle1}"  PasswordRevealMode="Hidden"/>
                    <TextBlock x:Name="PasswordValidation" FontSize="10" Margin="0 5 0 0" HorizontalAlignment="Right" />

                    <Button x:Name="Submit" Style="{StaticResource ButtonStyle1}"  HorizontalAlignment="Right" Margin="0 25 10 0" >
                        <SymbolIcon Symbol="Accept"/>
                    </Button>
                </StackPanel>

                <StackPanel x:Name= "LoginForm" VerticalAlignment="Top">
                    <TextBox x:Name="LoginEmail" Margin="0 0 0 0" Style="{StaticResource TextBoxStyle1}" />
                    <TextBlock x:Name="LoginEmailValidation" FontSize="10" Margin="0 5 0 10" HorizontalAlignment="Right" />
                    <PasswordBox x:Name="LoginPassword" Margin="0 0 0 0" Style="{StaticResource PasswordBoxStyle1}" />

                    <Button x:Name ="SubmitLogin" Style="{StaticResource ButtonStyle1}"  HorizontalAlignment="Right" Margin="0 40 10 0">
                        <SymbolIcon Symbol="Accept"/>
                    </Button>
                </StackPanel>

            </StackPanel>

        </Grid>
    </ScrollViewer>
</Page>
