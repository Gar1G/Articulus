                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         IsItemClickEnabled="True"
                                         ItemClick="feed_ItemClick"
                                         Visibility="Visible" 
                                         />
                </ScrollViewer>
                <ptr:PullToRefreshBox.TopIndicatorTemplate>
                    <DataTemplate>
                        <ptr:PullRefreshProgressControl Progress="{Binding}"
                                                        PullToRefreshText="Pull"
                                                        ReleaseToRefreshText="Release"/>
                    </DataTemplate>
                </ptr:PullToRefreshBox.TopIndicatorTemplate>
            </ptr:PullToRefreshBox>
            <Grid x:Name="addedReading" Width="120" Height="120" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Opacity="0">
                <Grid.Resources>
                    <Storyboard x:Name="ReadingList" AutoReverse="True">
                        <DoubleAnimation BeginTime="0:0:0" Storyboard.TargetName="addedReading" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                        <DoubleAnimation BeginTime="0:0:0.5" Storyboard.TargetName="addedReading" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="0" Duration="0:0:0.15"/>
                    </Storyboard>
                </Grid.Resources>
                <Grid.RenderTransform>
                    <TranslateTransform/>
                </Grid.RenderTransform>
                
                <!-- Elements for reading list animation-->
                <Ellipse Opacity="0.8" Fill="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <ContentPresenter FontFamily="Segoe MDL2 Assets" FontSize="50" Content="&#xE001;" Margin="0 0 0 20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock FontFamily="Arial" Foreground="White" FontSize="12" FontWeight="Thin" Text="Added to Reading List" TextWrapping="WrapWholeWords" Margin="0 0 0 20" VerticalAlignment="Bottom" HorizontalAlignment="Center" TextAlignment="Center" Width="90"/>
                
                
            </Grid>

            <!--Elements for sharesheet -->
            <Grid x:Name="share" Visibility="Collapsed" Opacity="0">
                <Grid.Resources>
                    <Storyboard x:Name="ShareSheet" AutoReverse="True">
                        <DoubleAnimation BeginTime="0:0:0" Storyboard.TargetName="share" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                        <DoubleAnimation BeginTime="0:0:0.5" Storyboard.TargetName="share" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="0" Duration="0:0:0.2"/>
                    </Storyboard>
                </Grid.Resources>
                <Grid.RenderTransform>
                    <TranslateTransform/>
                </Grid.RenderTransform>
                <Rectangle Fill="Black" Opacity="0.7"/>
                <Rectangle Fill="#a52222" Width="500" Height="250" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock Text="Share Functionality Coming Soon" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="30" Foreground="White"/>
            </Grid>

        </Grid>

        <Grid x:Name="SeeMoreUp" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="25" Visibility="Collapsed">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0" Color="White"/>
                        <GradientStop Offset="1" Color="Transparent"/>
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Grid.Background>
            <Button FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE010;" Foreground="DarkGray" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 2 0 2" Template="{StaticResource ButtonControlTemplate2}" Click="SeeMoreUp_Click"/>
        </Grid>

        <Grid x:Name="SeeMoreDown" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="25" Visibility="Collapsed">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0" Color="White"/>
                        <GradientStop Offset="1" Color="Transparent"/>
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Grid.Background>
            <Button FontFamily="Segoe MDL2 Assets" FontSize="20" Content="&#xE011;" Foreground="DarkGray" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 0 0 2" Template="{StaticResource ButtonControlTemplate2}" Click="SeeMoreDown_Click"/>
        </Grid>



        <SplitView Name="NavSplitView" 
                   Grid.Row="1" 
                   DisplayMode="CompactOverlay"
                   CompactPaneLength="0" >
            <SplitView.Pane>
                <ListView Name="PageListBox"  Background="LightGray" Foreground="Black" Style="{StaticResource ListViewStyle1}"  ItemClick="PageListBox_ItemClick" IsItemClickEnabled="True">
                    <ListViewItem Name="NewsFeed" Style="{StaticResource ListViewItemStyle1}" RelativePanel.AlignTopWithPanel="True" >
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock FontSize="18" Margin="20,0,0,0" Text="News Feed"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Name="Bookmarks" Style="{StaticResource ListViewItemStyle1}" RelativePanel.Below="NewsFeedItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            <TextBlock FontSize="18" Margin="20,0,0,0" Text="Reading List"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Name="History" Style="{StaticResource ListViewItemStyle1}" RelativePanel.Below="NewsFeedItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE81C;" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock FontSize="18" Margin="20,0,0,0" Text="History"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Name="Preferences" Style="{StaticResource ListViewItemStyle1}"  RelativePanel.Above="SettingsItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE779;" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock FontSize="18" Margin="20,0,0,0" Text="User Preferences"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Name="Settings" Style="{StaticResource ListViewItemStyle1}" RelativePanel.AlignBottomWithPanel="True" VerticalAlignment="Bottom">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock FontSize="18" Margin="20,0,0,0" Text="Settings"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Name="SignOut" Style="{StaticResource ListViewItemStyle1}"  RelativePanel.Above="SettingsItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE77B;" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock FontSize="18" Margin="20,0,0,0" Text="Sign Out"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame Name="ContentFrame"></Frame>
            </SplitView.Content>
        </SplitView>
        

        <Grid x:Name="Search" Visibility="Collapsed" Grid.RowSpan="2" Background="White" Opacity="0.9">

            <Grid.RowDefinitions>
                <RowDefinition Height="2*"  />
                <RowDefinition Height="12*"/>
                
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="1">
                <TextBox Text="{Binding Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Search"  Grid.Column="0" HorizontalAlignment="Stretch"  VerticalAlignment="Center" Margin="50,0,0,0" Style="{StaticResource TextBoxStyle1}" BorderThickness="0" />
                <Button x:Name="CloseSearch" Grid.Column="2" Grid.Row="1" Click="CloseSearch_Click" Foreground="White" BorderThickness="0" Padding="0" Background="{x:Null}" Style="{StaticResource ButtonStyle1}" HorizontalAlignment="Right" Margin="0,0,50,0">
                    <SymbolIcon Symbol="Cancel" MaxWidth="40"/>
                </Button>

            </Grid>

            <ScrollViewer x:Name="FilteredItems"  Grid.Row="1" Grid.Column="1" Margin="0 0 0 20"  VerticalScrollBarVisibility="Hidden">
                <ListView ItemsSource="{Binding FilteredItems}" ItemTemplate="{StaticResource FilteredTemplate}" ItemClick="ListView_ItemClick">
                    
                </ListView>


                <!--<ItemsControl ItemsSource="{Binding FilteredItems}" ItemTemplate="{StaticResource FilteredTemplate}"/>-->
            </ScrollViewer>

        </Grid>
        
    </Grid>
</Page>
